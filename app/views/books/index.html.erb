<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Category</th>
      <th>Title</th>
      <th>Auther</th>
      <th>Lent by </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.team %></td>
        <td><%= book.category %></td>
        <td><%= book.title %></td>
        <td><%= book.auther %></td>
        <td><%= getLenderName(book.person_id) %></td>

        <% if allowEdit (book.person_id) %>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Assign', assign_book_path(book) %></td>
          <td><%= link_to 'Release', release_book_path(book) %></td>
        <% end %>

        <% if is_admin? %>
          <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


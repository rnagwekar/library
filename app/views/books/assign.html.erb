<h1>Assign Book</h1>

<%= form_for(@book) do |f| %>

  <div class="field">
  	<strong>
    <%= f.label :title %>
    </strong>
    <%= @book.title %>
  </div>


  <div class="field">
  <strong>
    <%= f.label :Lent_By %>
  <strong>
    <%= f.select :person_id, @people %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>


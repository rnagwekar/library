<p id="notice"><%= notice %></p>

<h1>Devices</h1>


<form action='/devices' method="get">
  <p>
    <strong>Filter by location:</strong>
    <%= select_tag(:filter_location, options_for_select(@location)) %>
  </p>
  <p>
    <strong>Filter by owner:</strong>
    <%= select_tag(:filter_owner, options_for_select(@people)) %>
  </p>

  <input type="submit" />
</form>


<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Device</th>
      <th>Company</th>
      <th>Name</th>
      <th>Lent by</th>
      <th>Location</th>
      <th>Category</th>
      <th>Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= getName(device.person_id) %></td>
        <td><%= device.device_id %></td>
        <td><%= device.company %></td>
        <td><%= device.name %></td>
        <td><%= getLenderName(device.lent_by) %></td>
        <td><%= device.location %></td>
        <td><%= device.category %></td>
        <td><%= device.info %></td>

        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Delete', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Device', new_device_path %>

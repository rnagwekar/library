<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Empid</th>
      <th>Name</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>Login</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.empid %></td>
        <td><%= person.name %></td>
        <td><%= person.lastname %></td>
        <td><%= person.phone %></td>
        <td><%= person.login %></td>
        <td><%= person.admin %></td>

        <% if is_admin? %>
          <td><%= link_to 'Show', person %></td>
          <td><%= link_to 'Edit', edit_person_path(person) %></td>
          <td><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

